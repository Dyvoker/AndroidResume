<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.AboutMeFragment"
    android:orientation="vertical"
    android:padding="@dimen/grid_size_half">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_size_half"
        app:contentPadding="@dimen/grid_size"
        app:cardElevation="@dimen/card_view_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/personalText"
                android:text="@string/personal_information"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/grid_size">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/cakeImageView"
                    app:srcCompat="@drawable/cake"
                    android:layout_weight="0"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ageText"
                    android:layout_weight="0"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:layout_marginLeft="@dimen/grid_size_half"
                    android:layout_marginStart="@dimen/grid_size_half"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/yearsOldText"
                    android:text="@string/years"
                    android:layout_weight="0"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

            </LinearLayout>

            <ui.IconTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/maritalStatus"
                app:iconBeforeText="@drawable/male_female"
                app:text="@string/single"
                android:layout_marginTop="@dimen/grid_size_half"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/grid_size_half"
        app:contentPadding="@dimen/grid_size"
        app:cardElevation="@dimen/card_view_elevation">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="@string/hobbies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/hobbiesText"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

            <ui.IconTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/design"
                app:iconBeforeText="@drawable/palette"
                app:text="@string/design"
                android:layout_marginTop="@dimen/grid_size"/>

            <ui.IconTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/psychology"
                app:iconBeforeText="@drawable/face"
                app:text="@string/psychology"
                android:layout_marginTop="@dimen/grid_size_half"/>

            <ui.IconTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vocal"
                app:iconBeforeText="@drawable/microphone"
                app:text="@string/vocal"
                android:layout_marginTop="@dimen/grid_size_half"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
